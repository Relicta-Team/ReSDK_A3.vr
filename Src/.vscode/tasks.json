		// },
		{
			"label": "Validate client",
			"type": "process",
			"command": "third-party\\BuildTools\\Validate.bat",
			"args": [
				"client",
				"outputoff"
			],
			"options": {
				"cwd": "${workspaceFolder}\\.."
			},
			"group": "test",
			"presentation": {
				"reveal": "always",
				"clear": true,
				"focus": true,
				"group": "Validate"
			}
		},
		{
			"label": "Validate server",
			"type": "process",
			"command": "third-party\\BuildTools\\Validate.bat",
			"args": [
				"server",
				"outputoff"
			],
			"options": {
				"cwd": "${workspaceFolder}\\.."
			},
			"group": "test",
			"presentation": {
				"reveal": "always",
				"clear": true,
				"focus": true,
				"group": "Validate"
			}
		},
		{
			"label": "BUILD PROJECT",
			"type": "process",
			"command": "ReMaker\\ReMaker.exe",
			"args": [
				"build=client",
				"build=server"
			],
			"options": {
				"cwd": "${workspaceFolder}\\.."
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"clear": true,
				"focus": true,
				"group": "SQF-VM"
			}
		}
	]
}