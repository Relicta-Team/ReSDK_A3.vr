{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
		{
			"label": "Parse current file",
			"type": "process",
			"command": "third-party\\VirtualMachine\\sqfvm.exe",
			"args": [
				"--suppress-welcome",
				"-a",
				"-v src|src",
				"--nowarn",
				"--input-sqf .\\third-party\\VirtualMachine\\vm_parseFile.sqf",
				"--define __PARSED_FILE_PATH__='.\\src\\${relativeFile}'",
				"--define __VM_PARSE_FILE"
			],
			"options": {
				"cwd": "${workspaceFolder}\\.."
			},
			"group": "test",
			"presentation": {
				"reveal": "always",
				"clear": true,
				"focus": true,
				"group": "SQF-VM"
			},
			"problemMatcher": []
		},
		{
			"label": "Parse current module",
			"type": "process",
			"command": "third-party\\VirtualMachine\\sqfvm.exe",
			"args": [
				"--suppress-welcome",
				"-a",
				"-v src|src",
				"--nowarn",
				"--input-sqf .\\third-party\\VirtualMachine\\vm_parseModule.sqf",
				"--define __PARSED_FILE_PATH__='.\\${relativeFile}'",
				"--define __MODULE_DIRECTORY_PATH__='src\\${relativeFileDirname}'"
			],
			"options": {
				"cwd": "${workspaceFolder}\\.."
			},
			"group": "test",
			"presentation": {
				"reveal": "always",
				"clear": true,
				"focus": true,
				"group": "SQF-VM"
			}
		},
		{
			"label": "Update version (MAJOR)",
			"type": "process",
			"command": "update_version.exe",
			"args": [
				"updmaj"
			],
			"options": {
				"cwd": "${workspaceFolder}\\.."
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Update version (MINOR)",
			"type": "process",
			"command": "update_version.exe",
			"args": [
				"updmin"
			],
			"options": {
				"cwd": "${workspaceFolder}\\.."
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Update version (BUILD)",
			"type": "process",
			"command": "update_version.exe",
			"args": [
				"updpath"
			],
			"options": {
				"cwd": "${workspaceFolder}\\.."
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "AUTODOC THIS",
			"type": "process",
			"command": "Autodoc_current.exe",
			"args": [
				"${file}"
			],
			"options": {
				"cwd": "${workspaceFolder}\\.."
			},
			"group": "build",
			"problemMatcher": []
		},
